alias crc="code ~/.dotfiles"

alias ssh="autossh"
alias ntpon="timedatectl set-ntp yes"
alias ntpoff="timedatectl set-ntp no"

alias gb="git branch"
alias gba="git branch -a"
alias gss="git status"
alias gll="git log"
alias gaa="git add ."
alias gmm="git commit"
alias gma="git commit -a"
alias gmd="git commit --amend"
alias gdd="git diff"

alias gits="git multi"
alias gsb="gits branch"
alias gsba="gits branch -a"
alias gsss="gits status"
alias gsll="gits log"
alias gsdd="gits diff"

if [[ "$(command -v exa)" != "" ]]; then
    alias ls="exa"
else
    alias ls="/bin/ls"
fi
if [[ "$(command -v fdfind)" != "" ]]; then
    alias fd="fdfind"
fi
alias ll="ls -lh"
alias la="ls -lha"
alias cls="clear"
alias c="code ."
alias line="wc -l"
alias word="wc -w"
alias byte="wc -c"
alias bat="bat --color=always"
alias mmem="top -b -o +%MEM | head -n 20"
